{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "target": "es2016",
    "lib": [
      "es2016",
      "dom"
    ],
    "jsx": "react",
    "module": "esnext",
    "sourceMap": true,
    "outDir": "./build/",
    "rootDirs": [
      "./src",
      "../src"
    ],
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}
